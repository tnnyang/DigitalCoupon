/* pages/receive/receive.wxss */
.receive{background:url(assets/images/homeBg.jpg) no-repeat left top / 750rpx 1206rpx;height:1206rpx;padding-top: 800rpx;}
.btnBox{height: 190rpx;padding: 26rpx 0;}
.btnBox button{width: 296rpx;height: 90rpx;background: #e6ca82;border-radius: 8rpx;font-size: 34rpx;color: #393960;line-height: 90rpx;}
.btnBox .success_tips{font-size: 24rpx;color: #ddd;text-align: center;line-height: 60rpx;}
.mask{width: 100%;height: 100%;background: rgba(0, 0, 0, .6);position: absolute;left: 0;top: 0;z-index: 9;}
.popupCon{width: 516rpx;height: 562rpx;background: #fff;border-radius: 10rpx;position: absolute;left: 50%;top: 50%;margin: -281rpx 0 0 -258rpx;z-index: 99;overflow: hidden}
.popupCon .failSad{width: 132rpx;height: 132rpx;margin: 108rpx auto 0;display: block}
.popupCon .failTit{font-size: 32rpx;color: #333;display: block;text-align: center;margin: 20rpx 0;}
.popupCon .failReason{font-size: 32rpx;color: #999;display: block;text-align: center;}
.popupCon button{width: 516rpx;height: 98rpx;background: #e6ca82;font-size: 36rpx;color: #fff;line-height: 98rpx;position: absolute;bottom: 0;border-radius: 0 0 10rpx 10rpx;}
.popupCon button::after{border: 0;}
.close{position:absolute;top:0;right:0;width:100rpx;height:100rpx;display:flex;align-items:center;justify-content:center;}
.close image{width: 28rpx;height: 28rpx;}