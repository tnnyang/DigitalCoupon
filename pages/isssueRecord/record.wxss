/* pages/isssueRecord/record.wxss */
page{background:#f0f0f0;}
.record{display:flex;align-items:center;justify-content:center;padding:57rpx 24rpx;background:#fff;margin-bottom:14rpx;box-shadow:0 5rpx 10rpx #ddd;}
.left{flex:1;position:relative;top:5rpx;}
.left image, .avatar image{width:102rpx;height:102rpx;border-radius:50%;}
.middle{display:flex;flex-direction:column;flex:4;}
.nickname{font-size:26rpx;color:#333;}
.date{font-size:24rpx;color:#999;margin-top:15rpx;}
.right{flex:1;color:#666;}
.right text{font-size:48rpx;}
.right label{font-size:30rpx;margin:0 18rpx 0 10rpx;}
.right image{width:40rpx;height:40rpx;position:relative;top:9rpx;}
.mask{background:rgba(0, 0, 0, .3)}
.dialog{position:fixed;left:0;top:0;width:100%;height:100%;z-index:2;display:flex;align-items:center;justify-content:center;}
.share_dialog{text-align:center;width:580rpx;}
.content{background:#fff;padding:59rpx 0 84rpx;border-radius:10rpx;margin-bottom:34rpx;}
.name{font-size:28rpx;color:#333;}
.qrcode{height:310rpx;overflow:hidden;}
.qrcode image{width:310rpx;height:350rpx;display:block;margin:8rpx auto 0;}
.tips{font-size:24rpx;color:#999;margin-bottom:65rpx;}
.share_btn{width:212rpx;height:62rpx;line-height:62rpx;font-size:30rpx;color:#fff;background:#ff881e;border-radius:31rpx;}
.share_btn::after{border:1rpx solid #ff881e;}
.close image{width:78rpx;height:78rpx;}